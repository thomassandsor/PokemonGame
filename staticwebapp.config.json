{
  "routes": [
    {
      "route": "/static/*",
      "headers": {
        "cache-control": "public, immutable, max-age=31536000"
      }
    },
    {
      "route": "/styles/*",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "route": "/js/*",
      "headers": {
        "cache-control": "public, max-age=31536000"
      }
    },
    {
      "route": "/index.html",
      "serve": "/index.html",
      "statusCode": 200
    },
    {
      "route": "/game.html",
      "serve": "/game.html",
      "statusCode": 200
    },
    {
      "route": "/choose.html", 
      "serve": "/choose.html",
      "statusCode": 200
    },
    {
      "route": "/game-unified.html",
      "serve": "/game-unified.html", 
      "statusCode": 200
    },
    {
      "route": "/login.html",
      "serve": "/login.html",
      "statusCode": 200
    },
    {
      "route": "/login-simple.html",
      "serve": "/login-simple.html",
      "statusCode": 200
    },
    {
      "route": "/mobile-safe.html",
      "serve": "/mobile-safe.html",
      "statusCode": 200
    },
    {
      "route": "/battle-arena.html",
      "serve": "/battle-arena.html",
      "statusCode": 200
    },
    {
      "route": "/battle-join.html",
      "serve": "/battle-join.html",
      "statusCode": 200
    },
    {
      "route": "/battle-result.html", 
      "serve": "/battle-result.html",
      "statusCode": 200
    },
    {
      "route": "/catch-pokemon.html",
      "serve": "/catch-pokemon.html",
      "statusCode": 200
    },
    {
      "route": "/pokemon-unified.html",
      "serve": "/pokemon-unified.html",
      "statusCode": 200
    },
    {
      "route": "/my-pokemon.html",
      "serve": "/my-pokemon.html",
      "statusCode": 200
    },
    {
      "route": "/redirect.html",
      "serve": "/redirect.html",
      "statusCode": 200
    },
    {
      "route": "/api/GoogleLogin",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/GoogleCallback",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/MicrosoftLogin",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/MicrosoftCallback",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/ServeGame",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/dataverse/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/WhoAmI",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "serve": "/choose.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "404": {
      "redirect": "/",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https:; img-src 'self' data: https:; media-src 'self' https:; connect-src 'self' https: wss:",
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".css": "text/css",
    ".html": "text/html"
  }
}
